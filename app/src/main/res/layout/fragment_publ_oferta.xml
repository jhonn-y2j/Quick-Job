<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/fab_margin"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:text="@string/etiq_public_ofert"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:imeOptions="actionNext"
                android:id="@+id/edit_puesto"
                android:hint="@string/hint_puesto"
                android:inputType="text"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:imeOptions="actionNext"
                android:id="@+id/edit_area"
                android:inputType="text"
                android:hint="@string/hint_area"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:id="@+id/edit_tipotrabajo"
                android:hint="@string/hint_tipojob"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/hint_disponibilidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:minHeight="?android:attr/listPreferredItemHeight"
                    android:layout_width="wrap_content"
                    android:elevation="2dp"
                    android:id="@+id/spinner_disponibilidad"
                    android:entries="@array/list_disponb"
                    android:popupBackground="#512DA8"
                    android:textAlignment="center"
                    android:layout_height="wrap_content">

                </Spinner>

            </LinearLayout>

            <EditText
                android:id="@+id/edit_sueldooferta"
                android:inputType="numberDecimal"
                android:imeOptions="actionNext"
                android:hint="@string/hint_sueldo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edit_fechainicio"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:hint="@string/hint_fechainicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edit_ubicacion"
                android:inputType="text"
                android:hint="@string/hint_ubicacion"
                android:imeOptions="actionNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="@string/hint_requisitos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edit_requisitos"
                android:inputType="textImeMultiLine"
                android:imeOptions="actionNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="@string/hint_funciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edit_funciones"
                android:inputType="textImeMultiLine"
                android:imeOptions="actionNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/hint_perfil_est"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:minHeight="?android:attr/listPreferredItemHeight"
                    android:layout_width="wrap_content"
                    android:elevation="2dp"
                    android:id="@+id/spinner_perfil"
                    android:entries="@array/list_perfil"
                    android:popupBackground="#512DA8"
                    android:textAlignment="center"
                    android:layout_height="wrap_content">

                </Spinner>

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/hint_sexo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:minHeight="?android:attr/listPreferredItemHeight"
                    android:layout_width="wrap_content"
                    android:elevation="2dp"
                    android:id="@+id/spinner_genero"
                    android:entries="@array/list_genero"
                    android:popupBackground="#512DA8"
                    android:textAlignment="center"
                    android:layout_height="wrap_content">

                </Spinner>

            </LinearLayout>

            <TextView
                android:text="@string/hint_ramas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edit_ramas"
                android:inputType="textImeMultiLine"
                android:imeOptions="actionNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_publicar"
                android:text="@string/hint_publicar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>